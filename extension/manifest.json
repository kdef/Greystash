{
    "manifest_version": 2,

    "name": "Greystash",
    "description": "Transforms your weak human passwords to strong, computer generated ones.",
    "version": "0.1",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js", "password.js", "sjcl.js"]
      }
    ],

    "background": {
	"scripts": ["background.js", "file.js", "extPassword.js"]
    },

    "permissions": [
      "<all_urls>",
      "storage",
      "tabs",
      "background",
      "pageCapture",
      "debugger"
    ],

    "browser_action": {
        "default_icon": "cat.png",
	"default_popup": "extension.html"
    }
}
