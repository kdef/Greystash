{
    "manifest_version": 2,

    "name": "Greystash",
    "description": "Transforms your weak human passwords to strong, computer generated ones.",
    "version": "0.1",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "exclude_globs": ["chrome-extension://*", "chrome://*"],
        "js": ["contentScript.js"]
      }
    ],

    "background": {
      "scripts": [
        "background.js",
        "file.js",
        "extPassword.js",
        "password.js",
        "rules.js",
        "sjcl.js"
      ]
    },

    "permissions": [
      "<all_urls>",
      "tabs",
      "background",
      "pageCapture",
      "storage",
      "debugger"
    ],

    "page_action": {
      "default_icon": "cat.png",
      "default_popup": "popup.html",
      "default_title": "Greystash"
    }
}
