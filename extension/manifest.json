{
    "manifest_version": 2,

    "name": "Greystash",
    "description": "Transforms your weak human passwords to strong, computer generated ones.",
    "version": "0.1",

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "exclude_globs": ["chrome-extension://*", "chrome://*"],
        "js": ["js/contentScript.js", "js/lib/jquery-1.11.0.min.js"],
        "css": ["css/icon.css"]
      }
    ],

    "background": {
      "scripts": [
        "js/background.js",
        "js/file.js",
        "js/extPassword.js",
        "js/password.js",
        "js/rules.js",
        "js/lib/sjcl.js"
      ]
    },

    "permissions": [
      "<all_urls>",
      "tabs",
      "background",
      "pageCapture",
      "storage",
      "debugger"
    ],

    "icons": {
      "48": "imgs/greystash_icon_48.png",
      "128": "imgs/greystash_icon_128.png"
    },

    "page_action": {
      "default_icon": {
        "19": "imgs/greystash_icon_19.png",
        "38": "imgs/greystash_icon_38.png"
      },
      "default_popup": "popup.html",
      "default_title": "Greystash"
    },
    "web_accessible_resources": ["imgs/check.png","imgs/x.png","imgs/triangle.png"]
}
